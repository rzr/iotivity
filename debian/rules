default: rule/debuild
	sync

# Comment this to turn off verbose mode.
export DH_VERBOSE=1
project?=iotivity
version?=$(shell [ -r debian/changelog ] && dpkg-parsechangelog \
	| grep "Version:" | sed -e "s/Version: \(.*\)-.*/\1/g" \
	|| echo "0.0.0")
export version

tarball?=${CURDIR}/../${project}_${version}.orig.tar.gz
export tarball


rule/setup: /etc/debian_version
	sudo apt-get install \
 devscripts \
 debhelper \
 wget \
 autoconf \
 automake \
 autotools-dev \
 cmake \
 libtool \
 libbz2-dev \
 libglib2.0-dev \
 libicu-dev \
 python-dev \
 scons \
 sudo \
 unzip \
 uuid-dev \
 libcurl4-openssl-dev \
 valgrind \
 libboost-thread-dev \
 libboost-date-time-dev \
 libboost-iostreams-dev \
 libboost-log-dev \
 libboost-program-options-dev \
 libboost-regex-dev \
 libboost-system-dev \
 libsqlite3-dev

rule/version:
	@echo ${version}
	-cat /etc/os-release
	${MAKE} --version
	${CC} --version
	${CXX} --version

rule/debuild: debian/rules ${tarball}
	@which ${@F} || ${<D}/${<F} ${@D}/setup
	@ls ${tarball} || ${<D}/${<F} ${@D}/tarball
	${<D}/${<F} ${@D}/version
	${@F} -S -us -uc
	${@F} -us -uc

${tarball}:
	${MAKE} dist

%:
	dh $@

.PHONY: rule/debuild rule/setup

